---
interface Props {
	plan: string;
	price: string;
	features: string[];
	popular?: boolean;
}

const { plan, price, features, popular = false } = Astro.props;
---

<div class={`pricing-card ${popular ? 'popular' : ''}`}>
	{popular && <span class="popular-badge">MÃ¡s popular</span>}
	<h3>{plan}</h3>
	<div class="price">
		<span class="currency">$</span>
		<span class="amount">{price}</span>
		{price !== 'Gratis' && <span class="period">/mes</span>}
	</div>
	<ul>
		{features.map(feature => (
			<li>
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<polyline points="20 6 9 17 4 12"></polyline>
				</svg>
				{feature}
			</li>
		))}
	</ul>
	<button>Comenzar</button>
</div>

<style>
	.pricing-card {
		background: rgba(255, 255, 255, 0.05);
		border-radius: 20px;
		padding: 2.5rem 2rem;
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.1);
		transition: all 0.3s ease;
		position: relative;
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.pricing-card:hover {
		transform: translateY(-5px);
		border-color: rgba(255, 255, 255, 0.2);
	}

	.popular {
		border-color: #60a5fa;
	}

	.popular-badge {
		position: absolute;
		top: -12px;
		left: 50%;
		transform: translateX(-50%);
		background: #60a5fa;
		color: #fff;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.875rem;
		font-weight: 500;
	}

	h3 {
		font-size: 1.5rem;
		color: #fff;
		margin-bottom: 1rem;
		text-align: center;
	}

	.price {
		text-align: center;
		margin-bottom: 2rem;
		color: #fff;
	}

	.currency {
		font-size: 1.5rem;
		vertical-align: top;
		margin-right: 0.25rem;
	}

	.amount {
		font-size: 3.5rem;
		font-weight: 700;
	}

	.period {
		color: #86868b;
		margin-left: 0.25rem;
	}

	ul {
		list-style: none;
		margin-bottom: 2rem;
		flex-grow: 1;
	}

	li {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		color: #86868b;
		margin-bottom: 1rem;
	}

	li svg {
		flex-shrink: 0;
		stroke: #60a5fa;
	}

	button {
		background: rgba(255, 255, 255, 0.1);
		border: none;
		padding: 1rem;
		border-radius: 25px;
		color: #fff;
		font-weight: 500;
		cursor: pointer;
		transition: all 0.3s ease;
		width: 100%;
	}

	button:hover {
		background: rgba(255, 255, 255, 0.2);
	}

	.popular button {
		background: #60a5fa;
	}

	.popular button:hover {
		background: #3b82f6;
	}
</style>